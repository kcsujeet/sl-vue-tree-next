{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es7",
      "es2022"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./",
    "sourceMap": true,
    "allowJs": false,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [ "src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"]
}
